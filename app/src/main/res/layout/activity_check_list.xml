<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    tools:context=".SubscriptionListActivity">
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <com.fenjuly.mylibrary.DropDownLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:id="@+id/dropdownLayout"
            >
            <include layout="@layout/subscription_cat_main"/>
            <View android:layout_height="1dp" android:layout_width="match_parent" />
            <include layout="@layout/subscription_cat_state" />
            <View android:layout_height="1dp" android:layout_width="match_parent" />
            <include layout="@layout/subscription_cat_india" />
        </com.fenjuly.mylibrary.DropDownLayout>
    </LinearLayout>
</ScrollView>
